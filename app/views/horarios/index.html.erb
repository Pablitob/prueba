<body background="assets/fondo.jpg">
<div id="bus" class="page-header">
<%= form_tag request.path, :method => 'get' do %> 
 <%= content_tag :label do %> 
 <a id="nom">Horario:</a> 
 <%= text_field_tag :search, params[:search] %> 
 <%= submit_tag "Consultar", :name => nil, :class => "btn btn-primary btn-small" %> 
 <% end %> 
<% end %>  
</div>
<table id="ta" class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
        <th><%= sortable "id" %></th>
        <th><%= sortable "dia" %></th>
        <th><%= sortable "hora" %></th>
        <th><%= sortable "aula" %></th>
        <th><%= sortable "materia_id" %></th>
        <th><%= sortable "instructor_id" %></th>
        <th><%= sortable "curso_id" %></th>
        <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @horarios %>
  </tbody>
</table>
<div id="nu">
<tr>
    <td><%= link_to image_tag('nuevo.png', :width=>'45px', :title=>'Nuevo'    ), new_horario_path, :remote => true, :class => 'btn btn-inverse' %></td>
    </tr>
  </div>
<br />  
<br /> 
<div align="center"> 
 <%= will_paginate @horarios, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' rescue nil %> 
</div> 
<p id="to"> 
 Total  Intructores : <%= @horarios.total_entries %> 
</p>
<div id="opag">
 <%= form_tag request.path, :method => 'get' do %> 
   <%= content_tag :label do %>
