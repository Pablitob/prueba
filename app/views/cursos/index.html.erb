<body background="assets/fondo.jpg">
<%- model_class = Curso -%>
<div id="bus" class="page-header">
<%= form_tag request.path, :method => 'get' do %> 
 <%= content_tag :label do %> 
 <a id="nom">Nombre Curso:</a> 
 <%= text_field_tag :search, params[:search] %> 
 <%= submit_tag "Consultar", :name => nil, :class => "btn btn-primary btn-small" %> 
 <% end %> 
<% end %>  
</div>
<table id="table" class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
        <th><%= sortable "id" %></th>
        <th><%= sortable "ficha" %></th>
        <th><%= sortable "nombre" %></th>
        <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @cursos %>
  </tbody>
</table>
<div id="nue">
<tr>
    <td><%= link_to image_tag('nuevo.png', :width=>'45px', :title=>'Nuevo'), new_curso_path, :remote => true, :class => 'btn btn-inverse' %></td>
    </tr>
  </div>
<br />  
<br /> 
<div align="center"> 
 <%= will_paginate @cursos, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %> 
</div> 
<p id="to"> 
 Total  Cursos : <%= @cursos.total_entries %> 
</p>
</div>
<div id="opag">
 <%= form_tag request.path, :method => 'get' do %> 
   <%= content_tag :label do %>
    <font color="white">Seleccione numero de registros por pagina:</font>
    <br>
     <%= text_field_tag :limit, params[:limit], :id =>'num'%> 
          <%= submit_tag "Aceptar", :name => nil %> 
   <% end %> 
 <% end %>
</div>
