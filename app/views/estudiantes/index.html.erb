<body background="assets/fondo.jpg">
<%- model_class = Estudiante -%>
<div id="bus" class="page-header">
  <%= form_tag request.path, :method => 'get' do %> 
   <%= content_tag :label do %> 
     <a id="nom">Nombre Aprendiz:</a> 
     <%= text_field_tag :search, params[:search] %> 
     <%= submit_tag "Consultar", :name => nil, :class => "btn btn-primary btn-small " %> 
   <% end %> 
  <% end %>
</div>
<table id="ta" class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "nombres" %></th>
      <th><%= sortable "cedula" %></th>
      <th><%= sortable "email" %>Email</th>
      <th><%= sortable "direccion" %></th>
      <th><%= sortable "fecha_nacimiento" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @estudiantes %>
  </tbody>
</table>
<div id="nu">
<tr>
    <td><%= link_to image_tag('nuevo.png', :width=>'45px', :title=>'Nuevo'), new_curso_estudiante_path, :class => 'btn btn-inverse' %>
      <%= link_to 'Atras', cursos_path,  :class => 'btn btn-inverse' %>
    </td>
    </tr>
    </div> 
<br /> 
<br /> 
<div align="center"> 
<%= will_paginate @estudiantes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %> 
</div> 
<p id="to"> 
 Total Aprendices : <%= @estudiantes.total_entries %> 
</p>
<div id="opag">
 <%= form_tag request.path, :method => 'get' do %> 
   <%= content_tag :label do %>
    <font color="white">Seleccione numero de registros por pagina:</font>
    <br>
     <%= text_field_tag :limit, params[:limit], :id =>'num'%> 
          <%= submit_tag "Aceptar", :name => nil %> 
   <% end %> 
 <% end %>
</div>
